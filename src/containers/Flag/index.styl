*
  padding 0
  margin 0

.flag_page
  height 100vh
  width 100vw
  overflow hidden
  .webgl
    position fixed
    top 0
    left 0
    outline none
  .github
    position fixed
    left 0
    bottom 0
    z-index 1
    color rgba(255, 255, 255, .6)
    display flex
    align-items center
    padding 16px
    transition all .25s ease-in-out
    text-decoration none
    font-size 14px
    &:hover
      opacity .5
    .author
      padding-left 8px